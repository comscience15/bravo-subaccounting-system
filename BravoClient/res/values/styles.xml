<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="CardsIconViewTheme">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="CardTextViewTheme">
		<item name="android:layout_width">80dp</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
		<item name="android:textColor">#FFFFFF</item>    
    </style>
    
    <style name="CardTextViewTheme.CenterHorizontal">
		<item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="CardTextViewTheme.CenterVertical">
		<item name="android:layout_centerVertical">true</item>
    </style>
    
    <style name="CardImageViewTheme">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
    </style>
    
    <style name="CardImageViewTheme.CenterHorizontal">
		<item name="android:layout_centerHorizontal">true</item>
    </style>
    
    <style name="CardImageViewTheme.CenterVertical">
		<item name="android:layout_centerVertical">true</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarTabStyle">@style/MyActionBarTabStyle</item>
    </style>

    <style name="MyActionBarTabStyle" parent="android:style/Widget.Holo.Light.ActionBar.TabView">
        <!-- This is the configuration for tabs -->
        <item name="android:background">@drawable/tab_indicator</item>
    </style>

</resources>