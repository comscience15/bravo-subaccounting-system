<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#84252C">
    
     <ImageView
        android:id="@+id/transaction_list_icon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:layout_marginLeft="6dip"
        android:layout_centerVertical="true"
        android:contentDescription="card_image"
        android:src="@drawable/cards_list_icon" />

    <TextView
        android:id="@+id/transaction_list_content"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/transaction_list_icon"
        android:gravity="center_vertical"
        android:textSize="16sp" />
</RelativeLayout>
